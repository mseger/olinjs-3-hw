extends layout

block content
	h1 The Order
	p All Orders Placed
	div
		each order, i in orders
			div(value=order) Customer #{order.customerName} with ingredients:
				each ingredient, j in order.ingredients
					div(value=ingredient) #{ingredient.name} 
				form(method='post', action='/orders/delete/' + i)
					button
						| Order Completed
				br
				br
